@page "/"
@using SKstudioWeb
@namespace SKstudioWeb.Pages
@model IndexModel;
@{
    ViewData["Title"] = "Главная";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SK Studio</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">SK Studio</div>
            <nav class="desktop-nav">
                <ul class="menu">
                    <li><a href="#">О нас</a></li>
                    <li><a href="#">Услуги</a></li>
                    <li><a href="#">Специалисты</a></li>
                    <li><a href="#">Адрес</a></li>
                </ul>
            </nav>
            <div class="contact-info">
                <span>+7(905)518-81-41</span>
                <span>Истра, ул Ленина, 75</span>
            </div>
            <div class="menu-toggle" id="mobile-menu-toggle">&#9776;</div>
        </div>
    </header>
    <nav class="mobile-nav" id="mobile-nav">
        <ul class="mobile-menu">
            <li><a href="#">О нас</a></li>
            <li><a href="#">Услуги</a></li>
            <li><a href="#">Специалисты</a></li>
            <li><a href="#">Адрес</a></li>
        </ul>
    </nav>
    <main>
        <section class="hero">
            <div class="hero-text">
                <h1>Салон красоты и ногтевого сервиса</h1>
                <p>Создай свой неповторимый образ</p>
            </div>
            <div class="hero-image">
                <img src="~/images/imahero-image.jpg" alt="Hero Image">
            </div>
        </section>
        <section class="services">
            <h2>Наши услуги</h2>
            <div class="service-grid">
                <div class="service-card">
                    <img src="~/images/service1.jpg" alt="Service 1">
                    <span class="service-title">Услуга 1</span>
                </div>
                <div class="service-card">
                    <img src="~/images/service2.jpg" alt="Service 2">
                    <span class="service-title">Услуга 2</span>
                </div>
                <div class="service-card service-card-large">
                    <img src="~/images/service3.jpg" alt="Service 3">
                    <span class="service-title">Услуга 3</span>
                </div>
                <div class="service-card">
                    <img src="~/images/service4.jpg" alt="Service 4">
                    <span class="service-title">Услуга 4</span>
                </div>
                <div class="service-card service-card-bottom-large">
                    <img src="~/images/service5.jpg" alt="Service 5">
                    <span class="service-title">Услуга 5</span>
                </div>
                <div class="service-card">
                    <img src="~/images/service6.jpg" alt="Service 6">
                    <span class="service-title">Услуга 6</span>
                </div>
                <div class="service-card">
                    <img src="~/images/service7.jpg" alt="Service 7">
                    <span class="service-title">Услуга 7</span>
                </div>
                <div class="service-card">
                    <img src="~/images/service8.jpg" alt="Service 8">
                    <span class="service-title">Услуга 8</span>
                </div>
            </div>
        </section>
        <section class="masters">
            <h2>Мастера</h2>
            <div class="masters-container">
                <div class="master-card">
                    <img src="~/images/master1.jpeg" alt="Мастер 1">
                    <div class="master-info">
                        <p class="master-name">Садовникова Кристина</p>
                        <p class="master-position">Маникюрщица</p>
                    </div>
                </div>
                <div class="master-card">
                    <img src="~/images/master2.jpeg" alt="Мастер 2">
                    <div class="master-info">
                        <p class="master-name">Светлана</p>
                        <p class="master-position">Бровист</p>
                    </div>
                </div>
                <div class="master-card">
                    <img src="~/images/master3.jpeg" alt="Мастер 3">
                    <div class="master-info">
                        <p class="master-name">Наталья</p>
                        <p class="master-position">Стилист</p>
                    </div>
                </div>
                <div class="master-card vacancy-card">
                    <img src="~/images/vacancy.jpeg" alt="Вакансия">
                    <div class="master-info">
                        <p class="master-name">Вакансия</p>
                        <p class="master-position">Требуется специалист</p>
                    </div>
                </div>
            </div>
        </section>
        <section class="address">
            <h2>Адрес</h2>
            <div class="address-container">
                <div class="address-map">
                    <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3A132fa8820a546e3b6f08a314b9ec2b51a5eceb1180c735877a08266e6e1a0ee9&amp;source=constructor" width="100%" height="500px" frameborder="0"></iframe>
                </div>
                <div class="address-text">
                    <p>Наш адрес: Истра, ул Ленина, 75</p>
                    <p>Телефон: +7(905)518-81-41</p>
                </div>
            </div>
        </section>
    </main>
    <script src="~/js/site.js"></script>
</body>
</html>
